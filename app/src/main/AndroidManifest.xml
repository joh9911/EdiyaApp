<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ediya_app">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Homework"
        android:usesCleartextTraffic="true">


        <activity
            android:name="com.example.ediya_app.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.ediya_app.MenuSelectPageActivity" />
        <activity android:name="com.example.ediya_app.SelectOptionPageActivity" />
        <activity android:name="com.example.ediya_app.ShoppingBasketPageActivity" />
        <activity android:name="com.example.ediya_app.LoginPageActivity" />
        <activity android:name="com.example.ediya_app.SignUpPageActivity" />

        <service android:name="com.example.ediya_app.BoundService" />
    </application>

</manifest>