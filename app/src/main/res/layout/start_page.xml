<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ediya_logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/ediya_color"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="  EDIYA"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/ediya_color"
            android:src="@mipmap/menu_icon_150667" />
    </LinearLayout>

    <TextView
        android:id="@+id/ads_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="#D5D5D5"
        android:gravity="center"
        android:text="전환되는 화면 광고"
        android:textSize="30dp"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toBottomOf="@+id/top"
        >
    </TextView>

    <ImageView
        android:id="@+id/sequence_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/circle"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ads_picture"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sequence_circle"
        app:layout_constraintVertical_bias="0.7"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >

        <Button
            android:id="@+id/eat_there_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="매장에서 먹을래요"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/take_out_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="포장해서 먹을래요"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>


    </LinearLayout>


   

</androidx.constraintlayout.widget.ConstraintLayout>