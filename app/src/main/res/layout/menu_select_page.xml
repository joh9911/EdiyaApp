<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@mipmap/backbutton"
            android:background="@color/ediya_color"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/ediya_color"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="  EDIYA"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="20dp"
            />

        <ImageView
            android:id="@+id/shopping_basket_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/ediya_color"
            android:src="@mipmap/menu_icon_150667" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_categori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@drawable/layout_button_bottom_border"
        app:layout_constraintTop_toBottomOf="@+id/top">

        <Button
            android:id="@+id/coffee_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_button_left_border"
            android:text="커피"
            android:padding="0dp"
            android:textColor="@color/black"
            android:textSize="20dp"
             />

        <Button
            android:id="@+id/beverage_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_button_left_border"
            android:text="베버리지"
            android:padding="0dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ade_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_button_left_border"
            android:text="에이드"
            android:padding="0dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bakery_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_button_left_border"
            android:text="베이커리"

            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_box"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/menu_categori"
        app:layout_constraintBottom_toTopOf="@+id/order_phrase">
    </FrameLayout>


    <TextView
        android:id="@+id/order_phrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문하시고 싶으신 음료를 선택해주세요"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_box"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#5D5D5D"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>